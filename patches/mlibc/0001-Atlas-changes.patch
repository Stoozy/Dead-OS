+
+      uint64_t ret;
+      SYSCALL_NA2(SYS_STAT, path, &vns);
+      break;
+    }
+    default: sys_libc_panic();
+  }
+
+  statbuf->st_ino = vns.inode;
+  statbuf->st_size = vns.filesize;
+  statbuf->st_dev = 0;
+  statbuf->st_nlink = 1;
+  statbuf->st_uid = 0;
+  statbuf->st_gid = 0;
+  statbuf->st_rdev = 0;
+  statbuf->st_blksize = 0;
+  statbuf->st_blocks = 0;
+  statbuf->st_mode = 0;
+
+  switch (vns.type) {
+      case VFS_FILE:
