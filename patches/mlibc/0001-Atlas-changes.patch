+          break;
+      case VFS_DIRECTORY:
+          statbuf->st_mode |= S_IFDIR;
+          break;
+      case VFS_CHARDEVICE:
+          statbuf->st_mode |= S_IFCHR;
+          statbuf->st_rdev = vns.inode;
+          break;
+      default: sys_libc_panic();
+  }
+
+
+
+  return 0;
+}
