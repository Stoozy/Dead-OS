#include <kernel/pmm.h>
#include <string.h>

#define BLOCK_SIZE          4096
#define BLOCKS_PER_BYTE     8
#define MAX_BITMAPS         131072

static uint32_t total_blocks;
static uint32_t total_bitmaps;
static char mmap[MAX_BITMAPS]; // max maps for a 4 GiB memory space

void pmm_init(size_t mem_size){
    total_blocks = mem_size/BLOCK_SIZE;
    total_bmaps = n_blocks/BLOCKER_PER_BYTE;
    
    // every frame is used by default
    memset(&mmap, 0xff, n_bmaps);
}
